<?xml version="1.0" encoding="utf-8"?>
<form>
	<params addpath="/plugins/system/jat3/core/element">
		<param name="group" type="japaramhelper" function="@group">
			<option for="logoType" value="text" hideRow="true">logoText,sloganText</option>
			<option for="setting_menu" value="mega" hideRow="true">ja_menu_mega_animation,ja_menu_mega_duration,ja_menu_mega_delayhide</option>
			<option for="setting_screen" value="fixed" hideRow="true">screen_fixed_width</option>
		</param>
		
		<param name="standard_setting" level="1" type="japaramhelper" label="Standard Setting" function="@title" description="Standard Setting Desc" />
		<param name="general_setting" level="2" type="japaramhelper" label="General Setting" function="@title" description="General Setting Desc" />			
		<param name="logoType" type="list" default="image" label="Logo type" description="LOGO TYPE DESCRIPTION">
			<option value="image">Image</option>
			<option value="text">Text</option>
		</param>
		<param name="logoText" type="text" default="" size="50" label="Logo text" description="LOGO TEXT DESCRIPTION" />
		<param name="sloganText" type="text" default="" size="50" label="Slogan" description="SLOGAN DESCRIPTION" />
		<!-- Font setting -->
		<param name="setting_font" type="list" default="3" label="Font size" description="FONT SIZE DESCRIPTION">
			<option value="1">1</option>
			<option value="2">2</option>
			<option value="3">3</option>
			<option value="4">4</option>
			<option value="5">5</option>
			<option value="6">6</option>
		</param>
		<!-- Screen setting -->
		<param name="setting_screen" type="list" default="940" label="Template Width" description="TEMPLATE WIDTH DESCRIPTION">
			<option value="auto">AUTO</option>
			<option value="wide">Wide Screen</option>
			<option value="narrow">Narrow Screen</option>
			<option value="fixed">SPECIFIED</option>
		</param>			
		<param name="screen_fixed_width" type="text" default="980px" label="Specified width" description="SPECIFIED WIDTH DESCRIPTION" />
		<param name="hide_content_block" type="list" default="0" label="Hide Main content block" description="Hide Main content block Desc">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>			
		<!-- Direction setting -->
		<param name="setting_direction" type="list" default="ltr" label="Direction" description="Direction DESCRIPTION">
			<option value="ltr">LTR</option>
			<option value="rtl">RTL</option>
		</param>			
		<!-- T3 Logo setting -->
		<param name="setting_t3logo" type="list" default="t3-logo-light" label="T3_LOGO" description="T3_LOGO_DESCRIPTION">
			<option value="t3-logo t3-logo-light">Light logo</option>
			<option value="t3-logo t3-logo-dark">Dark logo</option>
			<option value="t3-logo-sm t3-logo-light-sm">Light logo small</option>
			<option value="t3-logo-sm t3-logo-dark-sm">Dark logo small</option>
			<option value="none">No show</option>
		</param>			

		<param name="GOOGLE FONT API SETTING" level="2" type="japaramhelper" label="GOOGLE FONT API SETTINGS" function="@title" description="GOOGLE FONT API SETTINGS Desc" />
		
		<param name="gfont_global" type="gfonts" default="" label="Global" description="Global Font DESCRIPTION" />
		<param name="gfont_logo" type="gfonts" default="" label="Logo" description="Logo Font DESCRIPTION" />
		<param name="gfont_slogan" type="gfonts" default="" label="Slogan" description="Slogan Font DESCRIPTION" />
		<param name="gfont_mainnav" type="gfonts" default="" label="Main Menu" description="MAIN MENU FONT DESCRIPTION" />
		<param name="gfont_subnav" type="gfonts" default="" label="Sub Menu" description="SUB MENU FONT DESCRIPTION" />
		<param name="gfont_moduletitle" type="gfonts" default="" label="Module Title" description="Module Title Font DESCRIPTION" />
		<param name="gfont_pageheading" type="gfonts" default="" label="Page heading" description="Page heading Font DESCRIPTION" />
		<param name="gfont_contentheading" type="gfonts" default="" label="Content heading" description="Content heading Font DESCRIPTION" />
		
		<param name="" type="updategfont" default="" label="" description="" />
		
		<param name="menu_setting" level="2" type="japaramhelper" label="Menu Setting" function="@title" description="Menu Setting Desc" />
		<param name="menutype" type="menu" default="mainmenu" label="Menu Module" description="Menu Module Desc" />
		<param name="setting_menu" type="list" default="mega" label="Menu Type" description="Menu Type Desc">
		  <option value="split">Split Menu</option>
		  <option value="css">CSS Menu</option>
		  <option value="dropline">Dropline Menu</option>
		  <option value="mega">Mega Menu</option>
		</param>
		<param name="startlevel" type="text" default="0" label="Start Level" description="Start Level Desc" />
		<param name="endlevel" type="text" default="-1" label="End Level" description="End Level Desc" />
		<param name="ja_menu_mega_animation" type="list" default="slide" label="Animation Type" description="Animation Type Desc">
		  <option value="none">None</option>
		  <option value="slide">Slide</option>
		  <option value="fade">Fade</option>
		  <option value="slide_fade">Slide &amp; Fade</option>
		</param>
		<param name="ja_menu_mega_duration" type="text" default="300" label="Animation duration" description="Animation duration Desc" />
		<param name="ja_menu_mega_delayhide" type="text" default="300" label="Delay Hide time" description="Delay Hide time Desc" />
		
		<param name="options" level="2" type="japaramhelper" label="Options" function="@title" description="Options Desc" />

		<param name="option_font" type="radio" default="0" label="Show/Hide Font Tools" description="Show/Hide Font Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="option_screen" type="radio" default="0" label="Show/Hide Screen Tools" description="Show/Hide Screen Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="option_profile" type="radio" default="0" label="Show/Hide Profile Tools" description="Show/Hide Profile Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="option_layouts" type="radio" default="0" label="Show/Hide Layouts Tools" description="Show/Hide Layouts Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="option_direction" type="radio" default="0" label="Show/Hide Direction Tools" description="Show/Hide Direction Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		<param name="option_menu" type="radio" default="0" label="Show/Hide Menu Tools" description="Show/Hide Menu Tools Desc">
			<option value="1">show</option>
			<option value="0">hide</option>
		</param>
		
		<param name="options" level="1" type="japaramhelper" label="Advanced Setting" function="@title" description="Advanced Setting Desc" />
		<param name="theme_setting" level="2" type="japaramhelper" label="Themes Setting" function="@title" description="Themes Setting Desc" />
		
		<param name="themes" type="jathemesettings" cols="50" rows="8" default="" label="Themes Setting" description="Themes Setting desc" />
	
		<param name="layout_setting" level="2" type="japaramhelper" label="Layout Setting" function="@title" description="Layout Setting Desc" />
		
		<param name="desktop_layout" type="jalayoutsettings" default="default" label="Desktop Layout" description="Layout desc" />
		<param name="handheld_layout" type="jalayoutsettings" default="handheld" label="Handheld Layout" description="Handheld Layout desc" />
		<param name="iphone_layout" type="jalayoutsettings" default="iphone" label="Iphone Layout" description="Iphone Layout desc" />
		<param name="android_layout" type="jalayoutsettings" default="iphone" label="Android Layout" description="Android Layout desc" />
		
		<param name="extendfromtemplate_setting" level="1" type="japaramhelper" label="Extend From Template" function="@title" description="Extend From Template" />						
								
	</params>
</form>
